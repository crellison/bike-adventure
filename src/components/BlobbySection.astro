---
export interface Props {
  backgroundColor: string;
  blobColor: string;
  className?: string;
}
const { backgroundColor, blobColor, className } = Astro.props;
import Blob from './Blob.astro';
---

<section class={`blobby`} style={{ backgroundColor }}>
  <Blob blob={0} className="blob zero" pathFill={blobColor} />
  <Blob blob={1} className="blob one" pathFill={blobColor} />
  <Blob blob={2} className="blob two" pathFill={blobColor} />
  <Blob blob={3} className="blob three" pathFill={blobColor} />
  <div class={className}>
    <slot />
  </div>
</section>
<style>
  .blobby {
    position: relative;
    animation: pulse 4s ease-in-out infinite;
    overflow: hidden;
  }

  .blobby > div {
    width: 100%;
    height: 100%;
    position: inherit;
  }

  .blob {
    position: absolute;
  }

  path {
    fill: var(--color-red-dark);
  }

  .blob.zero {
    right: -8vw;
    top: -10vw;
    width: 35vw;
  }

  .blob.one {
    left: -7vw;
    top: -8vw;
    width: 30vw;
  }

  .blob.two {
    left: 14vw;
    bottom: -17vw;
    width: 40vw;
  }

  .blob.three {
    right: 25vw;
    bottom: 1vw;
    width: 25vw;
  }
</style>
